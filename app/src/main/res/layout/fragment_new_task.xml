<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTaskFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="24sp"
            android:background="@drawable/close"/>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12sp"
            android:background="@android:color/transparent"
            android:text="СОХРАНИТЬ"
            android:layout_marginTop="11sp"
            android:textSize="14sp"
            android:textColor="@color/blue" />

        <EditText
            android:id="@+id/smthtodo"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:layout_below="@+id/close"
            android:layout_marginTop="30sp"
            android:layout_marginHorizontal="16sp"
            android:hint="     Что надо сделать..."
            android:textSize="16sp"
            android:background="@drawable/rv"
            android:textColorHint="@color/tertiary"/>

        <TextView
            android:id="@+id/importance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/smthtodo"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="16sp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Важность"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/priorities"
            android:layout_marginLeft="9sp"
            android:layout_marginTop="12sp"
            android:layout_below="@+id/importance"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/spinner"
            android:layout_marginVertical="32sp"
            android:layout_marginHorizontal="16sp"
            android:background="@color/tertiary" />


        <TextView
            android:id="@+id/deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="16sp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Сделать до"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deadline"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="24sp"
            android:textColor="@color/blue"
            android:text=""/>

        <Switch
            android:id="@+id/switchh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:theme="@style/Switchh"
            android:layout_marginRight="6sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30sp"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/date"
            android:layout_marginVertical="32sp"
            android:layout_marginHorizontal="16sp"
            android:background="@color/tertiary" />

        <ImageView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="14sp"
            android:layout_marginRight="-6sp"
            android:background="@drawable/delete"
            android:layout_marginLeft="16sp"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Удалить"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/del"
            android:layout_below="@+id/line1"
            android:textColor="@color/red" />


        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Отмена"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40sp"
            android:layout_toLeftOf="@+id/ready"
            android:layout_marginRight="10sp"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Готово"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40sp"
            android:textColor="@color/blue" />

    </RelativeLayout>

</FrameLayout>

