<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.todoapp.fragments.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_newTaskFragment"
            app:destination="@id/newTaskFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_mainFragment_to_editFragment"
            app:destination="@id/editFragment"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/newTaskFragment"
        android:name="com.example.todoapp.fragments.NewTaskFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_new_task">
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.todoapp.fragments.SettingsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_settings">
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.todoapp.fragments.EditFragment"
        android:label="EditFragment">
        <argument
            android:name="todoitem"
            app:argType="com.example.todoapp.model.TodoItem" />
    </fragment>
</navigation>