<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/back_primary</item>
        <item name="android:textColorHint">@color/tertiary</item>
        <item name="android:editTextColor">@color/tertiary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Switchh" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/back_elevated</item>
        <item name="android:colorForeground">@color/overlay</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:windowBackground">@color/back_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/tertiary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton
        </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton
        </item>
    </style>

    <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/blue</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
        <item name="shapeAppearanceOverlay">@style/MaterialAlertDialogCorners</item>
    </style>

    <style name="MaterialAlertDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="H1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Hint" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tertiary</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>