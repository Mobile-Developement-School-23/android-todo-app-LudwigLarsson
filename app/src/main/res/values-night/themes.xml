<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/back_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColorHint">@color/tertiary</item>
        <item name="android:editTextColor">@color/tertiary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Я без понятия, почему календарь в тёмной теме плохо работает -->
    <style name="DatePickerStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
        <item name="android:windowBackground">@color/back_secondary</item> <item name="android:textColor">@color/black</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/tertiary</item> <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButton </item>
    </style>
    <style name="DatePickerTheme.ButtonBarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog"> <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorAccent">@color/blue</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialogText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="shapeAppearanceOverlay">@style/MaterialAlertDialogCorners</item>
    </style>

    <style name="MaterialAlertDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="H1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="H2Button" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>

    </style>

    <style name="Body" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>